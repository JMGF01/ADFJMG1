<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ejercicio2.PrensaDeportivaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <WebView
                android:id="@+id/diarioAS"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botonAS"
                android:text="VISITAR WEB"
                android:onClick="visitarWeb"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@color/miAzul"
                android:alpha="0.85" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp" >

            <WebView
                android:id="@+id/diarioMarca"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botonMarca"
                android:text="VISITAR WEB"
                android:onClick="visitarWeb"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@color/miAzul"
                android:alpha="0.85" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp" >

            <WebView
                android:id="@+id/diarioMundoDeportivo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botonMundoDeportivo"
                android:text="VISITAR WEB"
                android:onClick="visitarWeb"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@color/miAzul"
                android:alpha="0.85" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="350dp" >

            <WebView
                android:id="@+id/diarioSport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/botonDiarioSport"
                android:text="VISITAR WEB"
                android:onClick="visitarWeb"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@color/miAzul"
                android:alpha="0.85" />
        </FrameLayout>
    </LinearLayout>

</ScrollView>